<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/op_background" />
        </shape>
    </item>
    <!-- Subtle gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/op_grad_start"
                android:endColor="@color/op_grad_end"
                android:angle="45" />
        </shape>
    </item>
</layer-list>
