<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="48dp"
    android:paddingRight="48dp"
    android:paddingTop="48dp"
    android:paddingBottom="48dp"
    android:background="@drawable/bg_subtle_gradient">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_title"
        android:textColor="@color/op_text"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/login_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/login_email"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:background="@drawable/focusable_card_background"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/login_password"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/focusable_card_background"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <TextView
            android:id="@+id/login_button"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="@string/login_submit"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/focusable_card_background"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <TextView
            android:id="@+id/login_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_note"
            android:textSize="16sp"
            android:textColor="@color/op_text_muted"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
